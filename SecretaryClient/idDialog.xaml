<Window x:Class="SecretaryClient.idDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecretaryClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Введите id" Height="120" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="Введите id:" VerticalAlignment="Center" FontSize="14"/>
        <TextBox x:Name="tbId" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" Margin="5" VerticalAlignment="Center" FontSize="14"/>
        <Button x:Name="btnOk" Grid.Column="0" Grid.Row="2" Content="Ок" Margin="5" VerticalAlignment="Center" Padding="0,10,0,10" Click="BtnOk_Click"/>
        <Button x:Name="btnCancel" Grid.Column="1" Grid.Row="2" Content="Отмена" Margin="5" VerticalAlignment="Center" Padding="0,10,0,10" Click="BtnCancel_Click"/>

    </Grid>
</Window>
